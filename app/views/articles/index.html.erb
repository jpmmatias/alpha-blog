<h1>All Articles</h1>
<ul>
<% @articles.map do |article|%>
    <li>
    <div>
        <div>
            <h1 class="title"><%= link_to article.title, article_path(article.id) %></h1>
            <p class="description"><%= article.description%></p>
        </div>
        <div class="buttons">
            <%= link_to "Delete", article_path(article.id) , method: :delete , data:{confirm: "Are you sure?"} %>
            <%= link_to "Edit", "#{article_path(article.id)}/edit "%>
        </div>
    </div>
    </li>
<%end%>
</ul>
<p>
<%= link_to "Creat new article", "articles/new" %>
</p>

